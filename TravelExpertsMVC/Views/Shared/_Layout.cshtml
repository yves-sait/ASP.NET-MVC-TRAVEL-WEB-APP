<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TravelExperts</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

    <!-- custom css -->
    <link rel="stylesheet" href="/css/styles.css">
    <!-- fontawesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />

    <!-- animate -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />


</head>
<body>


    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow header-color p-0">
            <div class="container">
                <a class="navbar-brand text-dark-blue nav-brand-txt" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="/image/logo.png" alt="" width="60" height="60" />
                    Travel Experts
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark-blue  @(ViewContext.RouteData.Values["controller"].ToString() == "Home" ? "active" : "")
                                     " asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark-blue  @(ViewContext.RouteData.Values["action"].ToString() == "Package" ? "active" : "")
                                     " asp-area="" asp-controller="Package" asp-action="Package">Packages</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark-blue  @(ViewContext.RouteData.Values["controller"].ToString() == "MyBooking" ? "active" : "")
                               " asp-area="" asp-controller="Mybooking" asp-action="Mybooking">MyBookings</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    @*<div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>*@
    <section>
        @if (TempData["Message"] != null)
        {
            <div class="container">
                <div class=" text-center">
                    <h4 class="@((bool)TempData["IsError"]? "bg-danger": "bg-success") text-center text-light p-2">
                        @TempData["Message"]
                    </h4>
                </div>

            </div>

        }
        @RenderBody()
    </section>

    <footer>
        <div class="footer-content">
            <h2>Travel Experts</h2>
            <p>
                Your time is precious, especially when traveling.  Our dedicated Travel Experts Gold team strives to deliver
                the highest level of personalized service
            </p>
            <ul class="socials">
                <li><a href="#"><i class="fa fa-facebook"></i></a></li>
                <li><a href="#"><i class="fa fa-twitter"></i></a></li>
                <li><a href="#"><i class="fa fa-instagram"></i></a></li>
                <li><a href="#"><i class="fa fa-envelope"></i></a></li>
            </ul>
        </div>
        <div class="footer-bottom">
            &copy; 2022 - <a asp-area="" asp-controller="Home" asp-action="Privacy">TravelExperts</a>
            @*<p>copyright &copy;2021  <span>TravelExperts</span></p>*@
        </div>
    </footer>

    @*<footer class="border-top footer text-muted">
            <div class="container">
                &copy; 2022 - TravelExpertsMVC - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>*@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
